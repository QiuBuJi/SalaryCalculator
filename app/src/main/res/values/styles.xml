<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DropDownStyle" parent="Platform.Widget.AppCompat.Spinner">
        <item name="android:popupBackground">@android:color/white</item>
    </style>

    <dimen name="style_interval">6dp</dimen>
    <dimen name="style_text_size">14sp</dimen>
    <dimen name="style_text_padding_both_side">4dp</dimen>
    <dimen name="style_circle_radius">18dp</dimen>
</resources>
